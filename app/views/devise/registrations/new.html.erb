    <a class="navbar-brand">Proof reading</a>
    <% if user_signed_in? %>
        <form class="form-inline nav-item nav-link mr-sm-2">
          <strong><%= current_user.email %></strong>&nbsp
          &nbsp<%= link_to " Edit profile", edit_user_registration_path %>&nbsp
