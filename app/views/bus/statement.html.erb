<center>
    <h1>Reservation :<%= @reservation.id %> Statements</h1>
    <table class= "myTable" style="width: 50%">
      <tr>
        <th>Statement Id</th>
        <th>Transaction Type</th>
        <th>Description</th>
        <th>Bus Id</th>
        <th>no.of seats</th>
        <th>Fare</th>
        <th>amount</th>
        <th>Refund Amount</th> 
      </tr>
      <tr>
        <% @statement.each do |state| %>
        <td><%= state.id %></td>
        <td><%= state.transaction_type %></td>
        <td><%= state.description %></td>
        <td><%= state.bus_id %></td>
        <td><%= state.no_seats %></td>
        <td><%= state.seat_fare %></td>
        <td><%= state.amount %></td>
        <td><%= state.refund_amount rescue '-' %></td>
      </tr>
       <% end %>
   </table> 
</center>
<style>
.myTable { 
  width: 100%;
  text-align: left;
  background-color: white;
  border-collapse: collapse; 
  }
.myTable th { 
  background-color: lightgreen;
  color: salmon; 
  }
.myTable td, 
.myTable th { 
  padding: 10px;
  border: 1px solid black; 
  }
  tr:nth-child(even) {background-color: #F0ffff;}
</style>