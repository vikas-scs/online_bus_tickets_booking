<section style="height:100vh; background-size: cover; background-image: url(https://r8a5m2f2.stackpathcdn.com/wp-content/uploads/2016/12/BUS-Ticketing-Management.jpg);">
  <div style="float: left; padding-left: 20%;">
	  <h1>Total seats: <%= @seats.total_seats %></h1>
    <center><h2>Available seats:<%= @seats.available_seats%></h2></center>
    <center><h4>seat fare:<%= @seats.fare %></h4></center>
    <%= form_tag(seats_path, :method => "get") do %>
      <%= hidden_field_tag :"bus_id", @seats.id %>
      no.of seats:<%= text_field_tag :"no_seats" %><br>
      <center><%= submit_tag "Book Now",class: "btn btn-success" %></center>
    <% end %>
    <center><%= link_to "Back", search_bus_path(id: @seats.id) %></center>
  </div>
</section>